{
    "name": "express-ts-boilerplate",
    "version": "1.0.0",
    "main": "dist/server.js",
    "author": "Nicholas Drew",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "NODE_ENV=production yarn serve",
        "start:dev": "NODE_ENV=development yarn serve:dev",
        "build": "tsc",
        "serve": "pm2 start dist/server.js",
        "serve:debug": "nodemon --exec node  --inspect -r ts-node/register  src/server.ts",
        "serve:dev": "nodemon --exec ts-node src/server.ts",
        "killdebug": "kill `lsof -t -i:9229`",
        "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
        "gen-migration": "ts-node node_modules/typeorm/cli.js -c default migration:generate -n PostRefactoring",
        "run-migration": "ts-node node_modules/typeorm/cli.js migration:run"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.0",
        "@types/uuid": "^3.4.5",
        "@typescript-eslint/eslint-plugin": "^1.13.0",
        "@typescript-eslint/parser": "^1.13.0",
        "concurrently": "^4.1.1",
        "eslint": "^5.0.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "jest": "^24.8.0",
        "nodemon": "^1.19.1",
        "prettier": "^1.18.2",
        "ts-jest": "^24.0.2",
        "ts-loader": "^6.0.4",
        "ts-node": "^8.3.0",
        "typescript": "^3.5.2"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "express-validator": "^6.1.1",
        "pg": "^7.12.1",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.18",
        "uuid": "^3.3.2"
    }
}
